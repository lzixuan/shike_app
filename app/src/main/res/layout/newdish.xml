<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f7f9">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="@color/zhihu_primary">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="菜品发布"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/neretbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="取消"
            android:textSize="18dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/publishbtn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:background="#00000000"
            android:text="发布"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textColor="#2e2e2e"
            android:hint="菜品名称"
            android:textColorHint="#605f5f"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dfdfdf" />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="start"
            android:padding="8dp"
            android:textColor="#2e2e2e"
            android:textSize="15dp"
            android:background="#FFFFFF"
            android:hint="菜品描述..."
            android:textColorHint="#605f5f"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="选择菜品类型:"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />


    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:text="主食"
            android:textColor="#000000"
            android:textSize="16sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:text="热菜"
            android:textColor="#000000"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:text="凉菜"
            android:textColor="#000000"
            android:textSize="16sp" />
        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:text="其他"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />


    <LinearLayout
        android:id="@+id/selectplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/exlist_lol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="选择食堂:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />
    <LinearLayout
        android:id="@+id/selectTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/list_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="选择标签:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="211dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/uploadPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="上传图片（可选）:"
            android:textColor="#000000"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/uploadPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="69dp"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:background="@drawable/grey_edge"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:src="@mipmap/addphoto2" />
    </RelativeLayout>


</LinearLayout>